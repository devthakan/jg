    <iframe 
        id="appFrame"
        src="https://script.google.com/macros/s/AKfycbx57JkLASUvgZelZJMaHy9eEfUjPaEx4wFMjvBDMp8gJSRK5mUMkyGXQLqGmxYaS1zZ6g/exec"
        allow="camera; microphone; autoplay; encrypted-media; fullscreen"
        onload="hideLoader()">
    </iframe>

    <script>
        // Hide loader when iframe is fully loaded
        function hideLoader() {
            const loader = document.getElementById('loader');
            // Thoda delay diya taaki smooth lage
            setTimeout(() => {
                loader.style.opacity = '0';
                setTimeout(() => {
                    loader.style.display = 'none';
                }, 500);
            }, 1000);
        }
    </script>

